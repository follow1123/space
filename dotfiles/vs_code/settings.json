{
    //--------------------------------------------------------------- vim插件相关配置 --------------------------------------------------------------- 
    "vim.visualModeKeyBindingsNonRecursive": [],
    "vim.normalModeKeyBindings": [
        { // 打开which key 面板
            "before": [
                "<space>"
            ],
            "commands": [
                "whichkey.show"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        { // which key
            "before": [
                "<space>"
            ],
            "commands": [
                "whichkey.show"
            ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { // ctrl + 上下左右键调整分割后窗口的大小
            "before": [
                "<C-up>"
            ],
            "after": [
                "<C-w>",
                "-"
            ]
        },
        {
            "before": [
                "<C-down>"
            ],
            "after": [
                "<C-w>",
                "+"
            ]
        },
        {
            "before": [
                "<C-left>"
            ],
            "after": [
                "<C-w>",
                "<"
            ]
        },
        {
            "before": [
                "<C-right>"
            ],
            "after": [
                "<C-w>",
                ">"
            ]
        },
        { // 向上或向下移动时光标始终保持在中间
            "before": [
                "<C-d>"
            ],
            "after": [
                "<C-d>",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "<C-u>"
            ],
            "after": [
                "<C-u>",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "n"
            ],
            "after": [
                "n",
                "z",
                "z",
            ]
        },
        {
            "before": [
                "N"
            ],
            "after": [
                "N",
                "z",
                "z",
            ]
        },
